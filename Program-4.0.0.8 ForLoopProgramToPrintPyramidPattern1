#include <iostream>
using namespace std;

int main()
{
     int n,p;
     cout<<"\nPress 1 to print number or Press 2 to print *  : ";
     cin>>p;
     cout<<"\nEnter a number how many times you want to print : ";
     cin>>n;

    
       if(p==1) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    cout<<" "<<j;
                }

                cout<<"\n";

            }
        }

        if(p==2) {
            for (int i = 1; i <= n; i++) {
                for (int j = 1; j <= i; j++) {
                    cout<<"* ";
                }
                cout<<"\n";
            }
        }      
return 0;
}
